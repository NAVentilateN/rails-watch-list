<div class="container">
  <h1><%= @list.name %></h1>
  <div class="row">
    <div class="col-4">
      <% @list.bookmarks.each do |bookmark| %>
        <%= Movie.find(bookmark.movie_id).title %>
        <%# <%= cl_image_tag %> %>
        <img src= <% Movie.find(bookmark.movie_id).poster_url %> alt="">
      <% end %>
    </div>
  </div>
  <div class="user-action">
    <%= link_to "Add new movie", new_list_bookmark_path(@list), class: 'btn btn-outline-primary' %>
    <%= link_to "Edit List", edit_list_path, class: 'btn btn-outline-primary' %>
  </div>
</div>
